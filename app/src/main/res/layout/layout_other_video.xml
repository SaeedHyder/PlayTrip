<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/frame_layout_ivBannerImage"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/x350"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/s3_banner"
                    android:scaleType="fitXY"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_height="@dimen/x80">

                </android.support.v7.widget.RecyclerView>





            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:text="Title"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="match_parent">

                </TextView>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="match_parent"
                    android:text="Becky"
                    android:background="@color/white"
                    android:textColor="@color/dark_grey"

                    android:textStyle="bold"
                    android:paddingLeft="@dimen/x8"
                    android:paddingRight="@dimen/x8"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/x4">

                </EditText>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:text="Title"
                    android:background="@drawable/rounded_orange_button"
                    android:gravity="center"
                    android:textStyle="bold"

                    android:layout_height="@dimen/x24">

                </TextView>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                android:background="@color/dark_grey">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:text="Start Time"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="match_parent">

                </TextView>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="match_parent"
                    android:text="11:00"
                    android:background="@color/white"
                    android:textColor="@color/dark_grey"

                    android:textStyle="bold"
                    android:paddingLeft="@dimen/x8"
                    android:paddingRight="@dimen/x8"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/x4">

                </EditText>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                android:background="@color/dark_grey">

            </View> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_gravity="center"
                android:text="End time"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="match_parent">

            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent"
                android:text="15:00"
                android:background="@color/white"
                android:textColor="@color/dark_grey"

                android:textStyle="bold"
                android:paddingLeft="@dimen/x8"
                android:paddingRight="@dimen/x8"
                android:maxLines="1"
                android:layout_marginTop="@dimen/x4">

            </EditText>


        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/x8"
                android:layout_width="match_parent"
                android:weightSum="5"

                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@drawable/s2_eye"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:drawablePadding="@dimen/x4"
                    android:maxLines="1"
                    android:textSize="@dimen/_x12"


                    />
                <TextView
                    android:drawableLeft="@drawable/s2_arrow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:drawablePadding="@dimen/x4"
                    android:maxLines="1"
                    android:textSize="@dimen/_x12"


                    />
                <TextView
                    android:drawableLeft="@drawable/s2_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:drawablePadding="@dimen/x4"
                    android:maxLines="1"
                    android:textSize="@dimen/_x12"


                    />
                <TextView
                    android:drawableLeft="@drawable/s2_h"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:drawablePadding="@dimen/x4"
                    android:maxLines="1"
                    android:textSize="@dimen/_x12"


                    />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

    </ScrollView>
    <Button
        android:textColor="@color/black"
        android:text="Add new"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"
        android:layout_marginBottom="@dimen/x16"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_white_fifty_bg"
        android:layout_height="@dimen/x40">

    </Button>





</RelativeLayout>



