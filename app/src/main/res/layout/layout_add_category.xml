<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/frame_layout_ivBannerImage"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/x300"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/s3_banner"
                    android:scaleType="fitXY"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/x64"
                    android:layout_height="@dimen/x64"
                    android:contentDescription="@null"
                    android:src="@drawable/s27_2"
                    android:layout_gravity="center"
                    />





            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:padding="@dimen/x4"
                    android:layout_weight=".1"
                    android:layout_height="@dimen/x32"
                    android:contentDescription="@null"
                    android:src="@drawable/s25_1"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:text="Title"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="match_parent">

                </TextView>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="match_parent"
                    android:text="Becky"
                    android:background="@color/white"
                    android:textColor="@color/dark_grey"

                    android:textStyle="bold"
                    android:paddingLeft="@dimen/x8"
                    android:paddingRight="@dimen/x8"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/x4">

                </EditText>
                <ImageView
                    android:layout_width="0dp"
                    android:padding="@dimen/x4"
                    android:layout_weight=".1"
                    android:layout_height="@dimen/x32"
                    android:contentDescription="@null"
                    android:src="@drawable/s31_pin"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                android:background="@color/dark_grey">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:orientation="horizontal"
                android:weightSum="1">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="0dp"
                    android:padding="@dimen/x4"
                    android:layout_weight=".1"
                    android:layout_height="@dimen/x32"
                    android:contentDescription="@null"
                    android:src="@drawable/s25_1"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:text="Start Time"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="match_parent">

                </TextView>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="match_parent"
                    android:text="11:00"
                    android:background="@color/white"
                    android:textColor="@color/dark_grey"

                    android:textStyle="bold"
                    android:paddingLeft="@dimen/x8"
                    android:paddingRight="@dimen/x8"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/x4">

                </EditText>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                android:background="@color/dark_grey">

            </View> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:orientation="horizontal"
            android:weightSum="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:padding="@dimen/x4"
                android:layout_weight=".1"
                android:layout_height="@dimen/x32"
                android:contentDescription="@null"
                android:src="@drawable/s25_1"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_gravity="center"
                android:text="End time"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="match_parent">

            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent"
                android:text="15:00"
                android:background="@color/white"
                android:textColor="@color/dark_grey"

                android:textStyle="bold"
                android:paddingLeft="@dimen/x8"
                android:paddingRight="@dimen/x8"
                android:maxLines="1"
                android:layout_marginTop="@dimen/x4">

            </EditText>


        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                android:background="@color/dark_grey">

            </View> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:orientation="horizontal"
            android:weightSum="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:padding="@dimen/x4"
                android:layout_weight=".1"
                android:layout_height="@dimen/x32"
                android:contentDescription="@null"
                android:src="@drawable/s25_1"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_gravity="center"
                android:text="Date"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_height="match_parent">

            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent"
                android:text="2019-10-20"
                android:background="@color/white"
                android:textColor="@color/dark_grey"

                android:textStyle="bold"
                android:paddingLeft="@dimen/x8"
                android:paddingRight="@dimen/x8"
                android:maxLines="1"
                android:layout_marginTop="@dimen/x4">

            </EditText>

        </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:background="@drawable/rounded_light_orange"
                android:layout_height="@dimen/x40"
                android:textColor="@color/black"
                android:text="Finish"
                android:layout_marginLeft="@dimen/x64"
                android:layout_marginTop="@dimen/x64"
                android:layout_marginRight="@dimen/x64">

            </Button>

        </LinearLayout>
    </ScrollView>





</RelativeLayout>