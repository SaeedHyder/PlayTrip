<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x300"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x2"
    android:background="@drawable/rounded_white_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_itemBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:src="@drawable/s33_video"
        >


    </ImageView>

    <TextView
        android:id="@+id/tv_itemVHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item Name"
        android:maxLines="1"
        android:textSize="@dimen/_x18"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/x8"

        />
    <TextView
        android:id="@+id/tv_itemVSubHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="caption by blah blah"
        android:maxLines="1"
        android:textSize="@dimen/_x16"
        android:layout_marginLeft="@dimen/x8"

        />
    <TextView
        android:layout_marginLeft="@dimen/x8"
        android:drawableLeft="@drawable/s5_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beckery"
        android:gravity="center"
        android:drawablePadding="@dimen/x4"
        android:maxLines="1"
        android:maxLength="10"
        android:layout_marginRight="@dimen/x8"

        android:layout_alignParentRight="true"
        android:textSize="@dimen/_x12"
        android:layout_marginTop="@dimen/x8"


        />
    <TextView
        android:layout_marginLeft="@dimen/x8"
        android:drawableLeft="@drawable/s24_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beckery"
        android:drawablePadding="@dimen/x4"
        android:maxLines="1"
        android:gravity="center"
        android:maxLength="10"
        android:layout_marginRight="@dimen/x8"

        android:layout_alignParentRight="true"
        android:textSize="@dimen/_x12"
        android:layout_marginTop="@dimen/x8"


        />
    <LinearLayout
        android:layout_marginTop="@dimen/x4"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/s2_eye"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="10"
            android:drawablePadding="@dimen/x4"
            android:maxLines="1"
            android:textSize="@dimen/_x12"


            />
        <TextView
            android:drawableLeft="@drawable/s2_arrow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="10"
            android:drawablePadding="@dimen/x4"
            android:maxLines="1"
            android:textSize="@dimen/_x12"


            />
        <TextView
            android:drawableLeft="@drawable/s2_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="10"
            android:drawablePadding="@dimen/x4"
            android:maxLines="1"
            android:textSize="@dimen/_x12"


            />
        <TextView
            android:drawableLeft="@drawable/s2_h"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="10"
            android:drawablePadding="@dimen/x4"
            android:maxLines="1"
            android:textSize="@dimen/_x12"


            />

    </LinearLayout>




</LinearLayout>